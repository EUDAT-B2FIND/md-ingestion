<?xml version="1.0" encoding="UTF-8" ?>
<mapping-table>
  <!-- Mappings for DublinCore metadata - default. -->
  <namespaces>
    <namespace ns="r" uri="http://www.openarchives.org/OAI/2.0/"/>
    <namespace ns="dc" uri="http://purl.org/dc/elements/1.1/"/>
    <namespace ns="dct" uri="http://purl.org/dc/terms/"/>
  </namespaces>
  <mappings>
    <!-- General Information -->
    <field name="title">
      <xpath>//dc:title</xpath>
    </field>
    <field name="notes">
      <xpath>//dc:description</xpath>
    </field>
    <field name="tags">
      <xpath>//dc:subject</xpath>
    </field>
    <!-- Identifier -->
    <field name="url">
      <xpath>//dc:identifier</xpath>
    </field>
    <!-- Provenance information -->
    <field name="author">
      <xpath>//dc:creator</xpath>
    </field>
    <field name="Publisher">
      <xpath>//dc:publisher</xpath>
    </field> 
    <field name="PublicationYear">
      <xpath>//dc:date</xpath>
    </field>  
    <field name="Rights">
      <xpath>//dc:rights</xpath>
    </field>
    <field name="Contact">
      <xpath>//dc:publisher</xpath>
    </field>
   <!-- Representation Information -->
    <field name="Language">
      <xpath>//dc:language</xpath>
    </field>
    <field name="ResourceType">
      <xpath>//dc:type</xpath>
    </field>
    <field name="Format">
      <xpath>//dc:format</xpath>
    </field>
    <field name="Checksum">
      <xpath></xpath>
    </field>    
   <!-- Coverage -->    
    <field name="Discipline">
      <xpath>//dc:subject</xpath>
    </field>
    <field name="SpatialCoverage">
      <xpath>//dct:spatial, //dc:coverage</xpath>
    </field>
    <field name="TemporalCoverage">
      <xpath>//dct:temporal, //dc:coverage</xpath>
    </field>   
    <!-- Hidden fields, only shown to logged in CKAN users -->
    <field name="fulltext">
      <xpath>normalize-space(string(/))</xpath>
    </field>
    <field name="oai_identifier">
      <xpath>//r:header/r:identifier/</xpath>
    </field>
    <field name="oai_set">
      <xpath>//r:header/r:setSpec/</xpath>
    </field>
    <field name="MapperVersion">
      <string expand="true">${mapper_version}</string>
    </field>
  </mappings>
</mapping-table>
