<?xml version="1.0" encoding="UTF-8" ?>
<mapping-table>
  <!-- Mappings for IVO metadata from IVOA. -->
  <namespaces>
    <namespace ns="r" uri="http://www.openarchives.org/OAI/2.0/"/>
    <namespace ns="dc" uri="http://purl.org/dc/elements/1.1/"/>
    <namespace ns="dct" uri="http://purl.org/dc/terms/"/>
    <namespace ns="ows" uri="http://www.opengis.net/ows"/>
  </namespaces>
  <mappings>
    <!-- General Information -->
    <field name="title">
      <xpath>//title</xpath>
    </field>
    <field name="notes">
      <xpath>//description/text()</xpath>
    </field>
    <field name="tags">
      <xpath>//dc:subject/text()</xpath>
    </field>
    <!-- Identifier -->
    <field name="url">
      <xpath>////dc:identifier/text() | //dc:source/text() </xpath>
    </field>
    <field name="RelatedIdentifier">
      <xpath>//dc:identifier/text()</xpath>
    </field>
    <field name="MetadataAccess">
      <xpath>//h:header/h:identifier</xpath>
    </field>
    <!-- Provenance Information -->
    <field name="author">
      <xpath>//dc:creator/text()</xpath>
    </field>
    <field name="Publisher">
      <xpath>//dc:publisher/text()</xpath>
    </field>
    <field name="Contributor">
      <xpath>//dc:contributor/text()</xpath>
    </field> 
    <field name="PublicationYear">
      <xpath>//r:datestamp/text()</xpath>
    </field> 
    <field name="Rights">
      <xpath>//dc:rights/text()</xpath>
      </field> 
    <field name="OpenAccess">
      <xpath>false</xpath>
    </field>
    <field name="Contact">
      <xpath>//dc:publisher/text()</xpath>
    </field>
    <!-- Representation Information -->
    <field name="Language">
      <xpath>//dc:language/text()</xpath>
    </field>
    <field name="ResourceType">
      <xpath>//dc:type/text()</xpath>
    </field>  
    <field name="Format">
      <xpath>//dc:format/text()</xpath>
    </field>  
   <!-- Coverage -->
    <field name="Discipline">
      <string>Astrophysics and Astronomy</string>
    </field>
    <field name="SpatialCoverage">
      <xpath>//dc:coverage/text(),//dc:spatial/text()</xpath>
    </field>
    <field name="TemporalCoverage">
      <xpath>//dc:coverage/text(),//dc:temporal/text()</xpath>
    </field>    
    <!-- Hidden fields, only shown to logged in CKAN users -->
    <field name="fulltext">
      <xpath>normalize-space(string(/))</xpath>
    </field>
    <field name="oai_identifier">
      <xpath>//r:header/r:identifier/text()</xpath>
    </field>
    <field name="oai_set">
      <xpath>//r:header/r:setSpec/text()</xpath>
    </field>
    <field name="MapperVersion">
      <string expand="true">${mapper_version}</string>
    </field>
  </mappings>
</mapping-table>
